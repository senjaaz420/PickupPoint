@model User
@{
    ViewData["Title"] = "View";
    Layout = null;
}


<!DOCTYPE html>
<html lang="ru">
<head>
    <link href="~/css/index.css" rel="stylesheet" />

</head>
<body>
    <main class='main test'>
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="login-form">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <p class="login__title">авторизация</p>
            <label for="login">Login</label>
            <input type="text" name='login'>
            <label for="password">Password</label>
            <input type="password" name="password">
            <button type="submit" formmethod="post" class="login__button">Вход</button>
        </form>
    </main>
</body>
</html>


