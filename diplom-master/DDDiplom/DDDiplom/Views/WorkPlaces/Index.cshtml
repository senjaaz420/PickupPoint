@model IEnumerable<DDDiplom.Models.WorkPlace>

@{
    ViewData["Title"] = "Index";
}
@section Styles
    {
    <link href="~/css/main.css" rel="stylesheet" />
}
@section WindowName
{
    <div class="action-title">
        <div class="container">
            <p class="action-text">Окно администратора</p>
        </div>
    </div>
}
<hr class="nav-line" noshade>
<div class="act-buttons">
    <li class='act-button' id='actBackButton'><a asp-action="Index">посмотреть</a></li>
    <li class='act-button' id='actAddButton'><a asp-action="Create">добавить +</a></li>
</div>
<div class="table-search">
    <input type="text" name="table-search" id="tableSearch">
</div>
<div class="table-wrapper">
    <table class="table">
        <thead>
            <tr>
                <th class='table__name'>
                    Название:
                </th>
                <th class='table__lname'>
                    Адрес:
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class='table__name'>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                     Г. @Html.DisplayFor(modelItem => item.Address.City), ул. @Html.DisplayFor(modelItem => item.Address.Street), д. @Html.DisplayFor(modelItem => item.Address.BuildingNumber)
                    </td>
                    <td class='table__button'>
                        <a asp-action="Edit" asp-route-id="@item.Id">Просмотреть</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
