<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DDDiplom</title>
    @RenderSection("Styles", false)
    <link rel="stylesheet" href="~/css/main.css" />
    <script src="~/js/main.js"></script>
   
</head>
<body>
    <header class="header">
        <p class="header__exit"><a class="header__exit--link" asp-area="" asp-controller="Account" asp-action="Login">Выход</a></p>
    </header>
    <div class="action-title">
        <div class="container">
            @RenderSection("Panel", false)
        </div>
    </div>
    @RenderSection("WindowName", false)
    <main class="main">
        <div class="container">
            <nav class="nav">
                @if (User.IsInRole("admin"))
                {
                    <li class="nav__item"><a id='employees' asp-area="" asp-controller="Users" asp-action="Index">сотрудники</a></li>
                    <li class="nav__item"><a id='issuePoints' asp-area="" asp-controller="WorkPlaces" asp-action="Index">пункты выдачи</a></li>
                    <li class="nav__item"><a id='generateReport' class="nav__item--link" href="#">сформировать отчет</a></li>
                }
                else if (User.IsInRole("user"))
                {
                    <li class="nav__item"><a id='issuePoints' asp-area="" asp-controller="Orders" asp-action="Index">заказы</a></li>
                    <li class="nav__item"><a id='generateReport' class="nav__item--link" href="#">сформировать отчет</a></li>
                }

            </nav>
            <hr class="nav-line" noshade>
        </div>
    </main>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>
