@model DDDiplom.Models.Order

@{
    ViewData["Title"] = "Create";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/style.css">

}
<div id="container">
    @section WindowName
{
        <div class="action-title">
            <div class="container">
                <p class="action-text">Окно добавления нового сотрудника</p>
            </div>
        </div>
    }
    <hr class="nav-line" noshade>
    <form asp-action="Create" id="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label id='lname' asp-for="IsPaid">Оплачено:</label><input type="text" asp-for="IsPaid" id="name"><span asp-validation-for="IsPaid" id="name"></span>
        </div>
        <div class="form-group">
            <label id='lsurname' asp-for="Summary">Суммарная стоимость:</label><input type="text" asp-for="Summary" id='surname'><span asp-validation-for="Summary" id='surname'></span>
        </div>
        <div class="form-group">
            <label id='lpatronymic' asp-for="OrderTime">Дата заказа:</label><input type="text" asp-for="OrderTime" id='patronymic'><span asp-validation-for="OrderTime" id='patronymic'></span>
        </div>
        <input type="submit" id='sbmt-button' value="Сохранить" />

    </form>
    <form asp-action="Delete" id="form">
        <br>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить заказ" id='sbmt-button' />
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
